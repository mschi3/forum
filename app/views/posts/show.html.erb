<h1>
  <%= @post.title %>
  <p>
    <%= @post.post %>
  </p>
</h1>

<% if current_user == @post.user %>
<p><%= link_to @post.user.email, user_path %><p>
<% end %>

<%= pluralize(@post.comments.count, "post") %>
<% if @post.categories.any? %> <%# will post category only if there is any %>
   <p>Categories: <%= render @post.categories %></p>
<% end %>

<% if current_user == @post.user %>
	<%= link_to "Edit", edit_post_path(@post) %>
	<%= link_to "Delete", post_path(@post), method: :delete, data: { confirm: "Are you sure you want to do this?"} %>
<% end %>

<h2>
	<p>Comments</p>
</h2>

<%= render @post.comments %>
<hr>

<h3>Reply to topic</h3>
<%= render "comments/form" %>

<p><%= link_to 'Back to index', :controller => 'posts', :action => 'index' %></p>
