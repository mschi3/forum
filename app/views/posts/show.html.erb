<h1>
  <%= @post.title %>
  <p>
    <%= @post.post %>
  </p>
</h1>

<%= link_to "Edit", edit_post_path(@post) %>
<%= link_to "Delete", post_path(@post), method: :delete, data: { confirm: "Are you sure you want to do this?"} %>
<p><%= link_to 'Back to index', :controller => 'posts', :action => 'index' %></p>
