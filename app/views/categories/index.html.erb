<h1>Listing All Categories</h1>
  <% @categories.each do |category| %>
    <ul>
      <li>
      <%= link_to "#{category.name}", category_path(category) %>
      </li>
      <li><%= pluralize(category.posts.count, "post") %></li>
    </ul>
  <% end %>

  <p><%= link_to 'Back to index', :controller => 'posts', :action => 'index' %></p>